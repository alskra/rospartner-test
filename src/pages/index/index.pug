						notifications-list(inline-template)
							.notifications-list
								.row
									.col
										.notification.--active
											.__head
												.__icon.--telegram
												strong.__title Telegram

											.__body
												base-button.__button(inline-template)
													button.base-button.--default.--small(type="reset") Отключить аккаунт

												form-checkbox.__checkbox(
													checked
													label="Только служебные"
												)
									.col
										.notification
											.__head
												.__icon.--icq
												strong.__title ICQ

											.__body
												.__actions
													.__action-item
