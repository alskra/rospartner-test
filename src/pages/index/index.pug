														button.__action-btn(title="Скопировать")
															base-icon(name="file_copy-outline")

													.__action-item
														.__action-label Перейдите в чат и отправьте команду боту

														button.__action-btn(title="Скопировать")
															base-icon(name="file_copy-outline")

									.col
