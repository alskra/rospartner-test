									sit, aspernatur aut odit aut fugit, sed quia consequuntur.

				form-example(inline-template)
					form.form-example(action="")
						.row
							.col.--size-33
								form-field(
									label="Название группы"
									placeholder="Введите название"
									name="name"
								)

							.col.--size-33
								form-field(
									label="ФИО ответственного"
									placeholder="Введите ФИО"
									value="Михайлов Игорь Петрович"
									name="fio"
								)

							.col.--size-33
								form-field(
									label="Email для входа"
									placeholder="Введите email"
									type="email"
									name="email"
								)

						.row
							.col.--size-100
								form-field(
									label="Описание рабочей группы"
									placeholder="Введите краткое и емкое описание для рабочей группы"
									tag="textarea"
									name="description"
								)

						.action-row
							.action-col
								base-button(inline-template)
									button.base-button.--primary(type="submit") Сохранить

							.action-col
								base-button(inline-template)
									button.base-button.--default(type="reset") Отмена

				page-section(inline-template)
					section.page-section
						h2.title Управление уведомлениями

						warning-msg
